files:
  /etc/proxy.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
        location / {
            proxy_pass          http://127.0.0.1:5000;
            proxy_http_version  1.1;

            proxy_set_header    Connection          $connection_upgrade;
            proxy_set_header    Upgrade             $http_upgrade;
            proxy_set_header    Host                $host;
            proxy_set_header    X-Real-IP           $remote_addr;
            proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;

            proxy_connect_timeout       3600;
            proxy_send_timeout          3600;
            proxy_read_timeout          3600;
            send_timeout                3600;
        }
  /opt/elasticbeanstalk/hooks/configdeploy/enact/90forcenginxcustom.sh:
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      cp /etc/proxy.conf /etc/nginx/conf.d/elasticbeanstalk/00_application.conf
      /etc/init.d/nginx restart
  /opt/elasticbeanstalk/hooks/restartappserver/enact/90forcenginxcustom.sh:
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      cp /etc/proxy.conf /etc/nginx/conf.d/elasticbeanstalk/00_application.conf
      /etc/init.d/nginx restart
container_commands:
 removeconfig:
    command: "cp /etc/proxy.conf /var/elasticbeanstalk/staging/nginx/conf.d/elasticbeanstalk/00_application.conf"